//https://leetcode.com/problems/climbing-stairs/

class Solution {
public:
    int climbStairs(int n) 
    {
        int* dp = (int*)malloc(sizeof(int)*(n+1));
        memset(dp, 0x00, sizeof(int)*(n+1));
        
        for(int i = 0; i<=n; i++)
        {
            if(i < 2)
                dp[i] = 1;
            else
            {
                dp[i] = dp[i-1]+dp[i-2];
            }
        }
        
        int ret = dp[n];
        free(dp);
        
        return ret;
    }
};

