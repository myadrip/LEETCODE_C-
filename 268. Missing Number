class Solution {
public:
    int missingNumber(vector<int>& nums) {
        sort(nums.begin(), nums.end());
        int n = 0;
        for(auto num : nums)
        {
            if(num != n)
                return n;
            n++;
        }
        
        return n;
    }
};
=========================================================
class Solution {
public:
    int missingNumber(vector<int>& nums) {
        bool buf[10000] = {false,};
        for(auto num : nums)
        {
            buf[num] = true;
        }
        for(int i = 0; i < 10000; i++)
        {
            if(buf[i] == false)
                return i;
        }   
        
        return 0;
        
    }
};
